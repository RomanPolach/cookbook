<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/greyHint</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.BrandedLaunch" parent="AppTheme">
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <style name="ToolbarTheme"></style>

    <style name="Base.Widget.MaterialComponents.TextInputLayout.HintText">
        <item name="android:textColor">@color/greyHint</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="colorControlActivated">@color/title_text</item>
        <item name="android:textColorHint">@color/greyHint</item>
    </style>
</resources>
